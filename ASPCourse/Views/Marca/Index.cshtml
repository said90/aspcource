@using ASPCourse.Models
@model List<MarcaCLS>

    @{
        ViewBag.Title = "Index";
    }

    <h2>Index</h2>
    @Html.ActionLink("Agregar", "Agregar", "Marca",null,new { @class="btn btn-primary"})

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th width="10%">@Html.LabelFor(p=>Model[0].iidmarca)</th>
                <th width="20%">@Html.LabelFor(p => Model[0].nombre)</th>
                <th width="70%">@Html.LabelFor(p => Model[0].descripcion)</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <td>@item.iidmarca</td>
                <td>@item.nombre</td>
                <td>@item.descripcion</td>
            </tr>
            }

        </tbody>

    </table>
