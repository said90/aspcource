@using ASPCourse.Models
@model List<ClienteCLS>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Agregar", "Agregar", "Cliente", null, new { @class = "btn btn-primary" })

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.LabelFor(x => x[0].iidcliente)</th>
            <th>@Html.LabelFor(x => x[0].nombre)</th>
            <th>@Html.LabelFor(x => x[0].appaterno)</th>
            <th>@Html.LabelFor(x => x[0].apmaterno)</th>
            <th>@Html.LabelFor(x => x[0].telefonofijo)</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.iidcliente</td>
                <td>@item.nombre</td>
                <td>@item.appaterno</td>
                <td>@item.apmaterno</td>
                <td>@item.telefonofijo</td>
            </tr>
        }
    </tbody>
</table>
